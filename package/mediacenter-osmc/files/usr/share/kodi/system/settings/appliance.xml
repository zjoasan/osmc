<?xml version="1.0" encoding="utf-8" ?>
<settings version="1">

  <section id="interface">
   <category id="skin">
    <group id="1">
     <setting id="lookandfeel.skin">
      <default>skin.osmc</default>
     </setting>
    </group>
   </category>
  </section>

  <section id="services">
    <category id="airplay">
      <group id="1">
        <setting id="services.airplay">
          <default>true</default>
        </setting>
      </group>
    </category>

    <category id="control">
      <group id="1">
        <setting id="services.webserver">
          <default>true</default>
        </setting>
	<setting id="services.webserverusername">
	  <default>osmc</default>
        </setting>
        <setting id="services.webserverpassword">
          <default>osmc</default>
        </setting>
      </group>
    </category>

    <category id="smb">
      <group id="2">
        <setting id="smb.maxprotocol">
          <default>3</default>
        </setting>
      </group>
    </category>
  </section>

  <section id="player">
    <category id="videoplayer">
      <group id="2">
        <setting id="videoplayer.adjustrefreshrate">
          <default>2</default>
        </setting>
      </group>
    </category>
  </section>
</settings>
